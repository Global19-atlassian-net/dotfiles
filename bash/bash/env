## language
export LC_CTYPE=en_US.UTF-8
export LC_ALL=en_US.UTF-8

## path

# tex
export PATH="/usr/texbin:${PATH}"

# homebrew
export PATH="/usr/local/bin:/usr/local/sbin:${PATH}"
export DYLD_FALLBACK_LIBRARY_PATH="/usr/local/lib:${DYLD_FALLBACK_LIBRARY_PATH}"
export HOMEBREW_GITHUB_API_TOKEN="HOMEBREW_TOKEN"

# cuda
export PATH="/Developer/NVIDIA/CUDA-5.5/bin:${PATH}"
export DYLD_FALLBACK_LIBRARY_PATH="/Developer/NVIDIA/CUDA-5.5/lib:${DYLD_FALLBACK_LIBRARY_PATH}"

# home collection
export PATH="${HOME}/bin:${PATH}"
export DYLD_FALLBACK_LIBRARY_PATH="${HOME}/lib:${DYLD_FALLBACK_LIBRARY_PATH}"
export PYTHONPATH="${HOME}/python:$PYTHONPATH"

# editor
export EDITOR='mvim-term' # see bin/mvim-term
export SVN_EDITOR=$EDITOR
export GIT_EDITOR=$EDITOR

# python
export PATH="${HOME}/anaconda/bin:${PATH}"
export DYLD_FALLBACK_LIBRARY_PATH="${DYLD_FALLBACK_LIBRARY_PATH}:${HOME}/anaconda/lib"
export PYTHONPATH="/usr/local/lib/python2.7/site-packages:$PYTHONPATH"
export PYTHONSTARTUP="${HOME}/.pythonrc.py"

## extensions

# ruby via rvm
[[ -s "${HOME}/.rvm/scripts/rvm" ]] && source "${HOME}/.rvm/scripts/rvm"

# autojump
export AUTOJUMP_AUTOCOMPLETE_CMDS='mv cp v'
if [ -f `brew --prefix`/etc/autojump.bash ]; then
  . `brew --prefix`/etc/autojump.bash
fi
