## language
export LC_CTYPE=en_US.UTF-8
export LC_ALL=en_US.UTF-8

## path

# home collection
PATH="${HOME}/bin:${PATH}"

# homebrew
PATH="/usr/local/bin:/usr/local/sbin:${PATH}"

# tex
PATH="/usr/texbin:${PATH}"

# editor
export EDITOR='mvim-term' # see bin/mvim-term
export SVN_EDITOR=$EDITOR
export GIT_EDITOR=$EDITOR

# python
PATH="/usr/local/share/python:${PATH}" # homebrew python 2.7
export PYTHONPATH="/usr/local/lib/python2.7/site-packages:$PYTHONPATH"
export PYTHONSTARTUP="${HOME}/.pythonrc.py"

## extensions

# ruby via rvm
[[ -s "${HOME}/.rvm/scripts/rvm" ]] && source "${HOME}/.rvm/scripts/rvm"

# autojump
export AUTOJUMP_AUTOCOMPLETE_CMDS='mv cp'
if [ -f `brew --prefix`/etc/autojump.bash ]; then
  . `brew --prefix`/etc/autojump.bash
fi
