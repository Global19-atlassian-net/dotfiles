## basics

# default args
alias cp="cp -r"
alias mv="mv -i"
alias rm="rm -i"
alias md="mkdir -p"

alias grep="grep --color=auto"
alias grepall="grep -RIn"

alias screen="screen -D -R" # I never fail to have a screen open

# ls
alias ls="ls -F -G"
alias ll="ls -lh"
alias la="ls -a"
alias lr="ls -t | head -8" # recent activity

# sloppy typing
alias sl="ls"
alias pc="cp"
alias vm="mv"
alias mr="rm"

## navigation

# .. = cd ..
# .. n = cd .. n times
function ..() {
  depth=${1:-1}
  for ((i=1; i<depth; i++))
  do
    builtin cd ..
  done
  cd ..
}

# the transition probability of `ls` after `cd` approaches 1,
# so just do the `ls` automatically
function cd() {
  builtin cd "$@"
  ls
}

# quick access to common dirs
# see completions, completion_scripts/dir_completion
function h { cd ~/h/"$*"; }
function c { cd ~/h/context/"$*"; }
function f { cd ~/h/focus/"$*"; }
function d { cd ~/h/dev/"$*"; }
function n { cd ~/h/notebook/$*; }
function p { cd ~/h/projects/"$*"; }
function w { cd ~/h/work/"$*"; }

