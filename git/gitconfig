[alias]
  cl = clone
  co = checkout
  st = status -sb
  f = fetch
  u = pull
  p = push
  b = branch
  t = tag
  a = add -A
  rm = rm -r
  d = diff
  ds = diff --stat
  di = diff --cached
  dt = difftool
  dti = difftool --cached
  r = rebase --preserve-merges
  ri = rebase --interactive
  rc = rebase --continue
  ra = rebase --abort
  re = remote
  m = merge --ff
  mn = merge --no-ff
  l = log --oneline --decorate
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  ls = log --stat
  lp = log -p
  lm = log --merge --left-right -p
  sh = show
  id = describe --tags
  soft = reset --soft
  hard = reset --hard
  undo = reset --soft HEAD^
  conflicted = git diff --name-only --diff-filter=U
  crucible = gc --aggressive --prune=now
[core]
  autocrlf = input
  excludesfile = <homedir>/.gitignore
[init]
  templatedir = ~/.git-templates
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
[log]
  date = local
[diff]
  tool = Kaleidoscope
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
  prompt = false
[merge]
  tool = Kaleidoscope
  summary = true
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true
[mergetool]
  prompt = false
[push]
  default = current
[pull]
  rebase = true
[github]
  user = <github_user>
  token = <github_token>
[credential]
  helper = cache --timeout=3600
[init]
  templatedir = ~/.git-templates
[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f
[user]
  name = <name>
  email = <email>
[github]
  user = <user>
  token = <token>
