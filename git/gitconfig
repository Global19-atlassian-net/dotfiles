[user]
  name = <name>
  email = <email>
[alias]
  cl = clone
  co = checkout
  st = status -sb
  df = diff
  stage = diff --cached
  br = branch
  rb = rebase
  lg = log --oneline --decorate
  ls = log --stat
  lp = log -p
  lr = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  lm = log --merge --left-right -p
  sh = show
  rm = rm -r
  crucible = gc --aggressive --prune=now
[core]
  autocrlf = input
  excludesfile = <homedir>/.gitignore
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
[log]
  date = local
[diff]
  tool = Kaleidoscope
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
  prompt = false
[merge]
  tool = Kaleidoscope
  summary = true
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true
[mergetool]
  prompt = false
[push]
  default = tracking
[pull]
  rebase = true
[github]
  user = <github_user>
  token = <github_token>
[credential]
  helper = osxkeychain
[init]
  templatedir = ~/.git-templates
