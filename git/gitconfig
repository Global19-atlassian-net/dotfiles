[user]
  name = <name>
  email = <email>
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
[alias]
  st = status -sb
  ci = commit
  co = checkout
  cl = clone
  br = branch
  push = push --tags
  amend = commit --amend -C HEAD
  undo = reset --soft HEAD^
  df = diff
  staged = diff --cached
  lg = log --oneline --decorate
  lgs = log --stat
  lgp = log -p
  lgr = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  rb = rebase -i
  sh = show
[merge]
  tool = opendiff
  summary = true
[core]
  autocrlf = input
[push]
  default = tracking
[github]
  user = <github_user>
  token = <github_token>
