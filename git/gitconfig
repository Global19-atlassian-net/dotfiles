[user]
  name = <name>
  email = <email>
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
[alias]
  cl = clone
  co = checkout
  ci = commit
  st = status -sb
  df = diff
  stage = diff --cached
  br = branch
  rb = rebase
  lg = log --oneline --decorate
  ls = log --stat
  lp = log -p
  lr = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  lm = log --merge --left-right -p
  sh = show
  rm = rm -r
[merge]
  tool = opendiff
  summary = true
[core]
  autocrlf = input
  excludesfile = <home_path>/.gitignore
[push]
  default = upstream
[github]
  user = <github_user>
  token = <github_token>
