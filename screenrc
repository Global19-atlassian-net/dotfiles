# turn off annoyances
startup_message off
vbell off

# utf8 always & forever
defutf8 on

# vim-style focus change
bind j focus down
bind k focus up

# status line
hardstatus on
hardstatus alwayslastline
hardstatus string "%H %t %w"
bind f eval "hardstatus ignore"
bind F eval "hardstatus alwayslastline"

# named screens
screen -t bash
screen -t vim
screen -t git

# init to first screen
select 0
